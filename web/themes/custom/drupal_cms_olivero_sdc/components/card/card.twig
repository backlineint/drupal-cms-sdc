<retro-card>
    <div class="card">
      <div class="card-image">
        {% block image %}{% endblock %}
      </div>
      <div class="card-content">
        <div class="card-meta">
          {% if display_submitted %}
            <span class="date">{{date}}</span>
          {% endif %}
          {% if tag %}
          <div class="tags">
            <span class="tag">{{tag}}</span>
          </div>
          {% endif %}
        </div>
        <h2 class="card-title">{{title}}</h2>
        <div class="card-text">
          {% block body %}{% endblock %}
        </div>
        <a href={{url}} class="read-more">Jack In â†’</a>
      </div>
    </div>
</retro-card>