---
interface Props {
  date: string;
  tag: string;
  title: string;
}

const { title, date, tag } = Astro.props;
---

<style is:global>
retro-card {
    font-family: "VT323", monospace;
    line-height: 1.5;
    font-weight: 400;
    color-scheme: light;
    background-color: #1B1B1B;
    background-image:
      linear-gradient(rgba(27, 27, 27, 0.9), rgba(27, 27, 27, 0.9)),
      linear-gradient(90deg, rgba(6, 120, 190, 0.1) 1px, transparent 1px),
      linear-gradient(rgba(6, 120, 190, 0.1) 1px, transparent 1px);
    background-size: 100% 100%, 40px 40px, 40px 40px;

  h2 {
    font-family: "VT323", monospace;
    line-height: normal;
  }

  .card {
    background: #2B2B2B;
    border-radius: 0;
    overflow: hidden;
    box-shadow:
      0 0 10px #0678BE,
      0 0 20px rgba(6, 120, 190, 0.5),
      0 0 30px rgba(6, 120, 190, 0.3);
    border: 2px solid #0678BE;
    transition: all 0.2s ease-in-out;
    position: relative;
  }

  .card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, #53B0EB, #0678BE, #53B0EB);
    animation: scanline 2s linear infinite;
  }

  @keyframes scanline {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  .card:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow:
      0 0 15px #0678BE,
      0 0 25px rgba(6, 120, 190, 0.5),
      0 0 35px rgba(6, 120, 190, 0.3);
  }

  .card-image {
    width: 100%;
    height: 250px;
  }

  .card-image img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    filter: saturate(150%) contrast(110%) brightness(90%);
    border-bottom: 2px solid #0678BE;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .card-image.glitch {
    animation: glitch 0.3s cubic-bezier(.25, .46, .45, .94) both;
  }

  @keyframes glitch {
    0% {
      transform: translate(0);
      filter: saturate(150%) contrast(110%) brightness(90%);
    }
    20% {
      transform: translate(-5px, 5px);
      filter: saturate(200%) contrast(150%) brightness(70%) hue-rotate(90deg);
    }
    40% {
      transform: translate(5px, -5px);
      filter: saturate(300%) contrast(200%) brightness(120%) hue-rotate(-90deg);
    }
    60% {
      transform: translate(-3px, 3px);
      filter: saturate(200%) contrast(150%) brightness(50%) hue-rotate(45deg);
    }
    80% {
      transform: translate(3px, -3px);
      filter: saturate(150%) contrast(110%) brightness(90%) hue-rotate(-45deg);
    }
    100% {
      transform: translate(0);
      filter: saturate(150%) contrast(110%) brightness(90%);
    }
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .date {
    color: #53B0EB;
    font-size: 1rem;
    text-shadow: 0 0 5px rgba(83, 176, 235, 0.5);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    background-color: #003CC5;
    color: #ffffff;
    padding: 0.25rem 0.75rem;
    border-radius: 0;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    border: 1px solid #003CC5;
    text-shadow: 0 0 5px rgba(0, 60, 197, 0.5);
    cursor: pointer;
    user-select: none;
  }

  .tag.flicker {
    animation: flicker 0.3s ease-in-out;
  }

  @keyframes flicker {
    0% {
      opacity: 1;
    }
    25% {
      opacity: 0.5;
    }
    50% {
      opacity: 0.1;
    }
    75% {
      opacity: 0.8;
    }
    100% {
      opacity: 1;
    }
  }

  .card-title {
    color: #ffffff;
    font-size: 2rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow:
      2px 2px #0678BE,
      4px 4px rgba(6, 120, 190, 0.3);
  }

  .card-text {
    color: #D3E7F4;
    margin: 0 0 1.5rem 0;
    line-height: 1.625;
    font-size: 1.1rem;
  }

  .read-more {
    color: #53B0EB;
    text-decoration: none;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    transition: all 0.15s ease-in-out;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 1.1rem;
    border: 1px solid #53B0EB;
    padding: 0.5rem 1rem;
    text-shadow: 0 0 5px rgba(83, 176, 235, 0.5);
  }

  .read-more:hover {
    color: #ffffff;
    background-color: #0678BE;
    box-shadow: 0 0 10px rgba(6, 120, 190, 0.5);
    text-shadow: none;
  }
}
</style>

<script>
  // Add glitch effect to image on click
const cardImage = document.querySelector('.card-image');
cardImage?.addEventListener('click', () => {
  cardImage.classList.add('glitch');
  setTimeout(() => {
    cardImage.classList.remove('glitch');
  }, 300);
});

// Add flicker effect to tags on click
const tags = document.querySelectorAll('.tag');
tags.forEach(tag => {
  tag.addEventListener('click', () => {
    tag.classList.add('flicker');
    setTimeout(() => {
      tag.classList.remove('flicker');
    }, 300);
  });
});
</script>

<div id="app">
  <retro-card>
    <div class="card">
      <div class="card-image">
        <slot name="image" />
      </div>
      <div class="card-content">
        <div class="card-meta">
          <span class="date">{date}</span>
          <div class="tags">
            <span class="tag">{tag}</span>
          </div>
        </div>
        <h2 class="card-title">{title}</h2>
        <div class="card-text">
          <slot name="body" />
        </div>
        <a href="#" class="read-more">Jack In â†’</a>
      </div>
    </div>
</retro-card>
</div>
